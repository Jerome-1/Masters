extends layout.pug  
block content 
    h1#heading Library 
    .search-wrapper
        nav
            ul 
                li 
                    a(href="/action") Action
                li 
                    a(href="/romance") Romance
                li 
                    a(href="/mystery") Mystery
                li 
                    a(href="/Thriller") Thriller
                li 
                    a(href="/dystopian") Dystopian
            div.search-bar       
                input.input-bar(type="text", id="input-bar", placeholder="search...", onkeyup="search()")
    div.row  
        for item in data
            div.column  
                img.yo(src="../images/cover.jpg", alt="book cover", style="width:100%")
                h1.image-heading 
                    a.bLink(href="/solo-book/" + item.book_id) #{item.book_name}
                p.image-paragrapgh #{item.book_author}
                p.image-paragrapgh #{item.genre}